<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_130sdp"
    android:padding="@dimen/_4sdp"
    tools:context=".activities.homeActivity">

   <androidx.cardview.widget.CardView
       android:id="@+id/home_card_stac"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintDimensionRatio="1"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:cardPreventCornerOverlap="true"
       app:cardCornerRadius="@dimen/_6ssp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/stac_logo_small" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/home_card_chat"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginStart="4dp"
       app:layout_constraintBottom_toTopOf="@id/home_card_settings"
       app:layout_constraintDimensionRatio="1"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/home_card_stac"
       app:layout_constraintTop_toTopOf="@id/home_card_stac"
       app:cardPreventCornerOverlap="true"
       app:cardCornerRadius="@dimen/_6ssp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/chat_image_two" />
   </androidx.cardview.widget.CardView>


   <androidx.cardview.widget.CardView
       android:id="@+id/home_card_settings"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginTop="4dp"
       app:layout_constraintBottom_toBottomOf="@id/home_card_stac"
       app:layout_constraintDimensionRatio="1"
       app:layout_constraintEnd_toEndOf="@id/home_card_chat"
       app:layout_constraintStart_toStartOf="@id/home_card_chat"
       app:layout_constraintTop_toBottomOf="@id/home_card_chat"
       app:cardPreventCornerOverlap="true"
       app:cardCornerRadius="@dimen/_6ssp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/settings_image" />
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/home_card_highlight"
       android:layout_width="match_parent"
       android:layout_height="130dp"
       android:layout_marginTop="16dp"
       app:cardCornerRadius="@dimen/_6ssp"
       app:cardPreventCornerOverlap="true"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintDimensionRatio="1"
       app:layout_constraintEnd_toEndOf="@id/home_card_settings"
       app:layout_constraintStart_toStartOf="@id/home_card_stac"
       app:layout_constraintTop_toBottomOf="@id/home_card_stac">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/skills_image"
          android:scaleType="centerCrop"
          android:adjustViewBounds="true"/>
   </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>