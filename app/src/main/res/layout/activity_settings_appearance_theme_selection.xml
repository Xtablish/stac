<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/input_background"
    tools:context=".activities.settings.SettingsAppearanceThemeSelection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp">

        <ImageView
            android:id="@+id/imageCancelBtn"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary"
            android:contentDescription="@string/text_image_view"
            android:padding="@dimen/_14sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_text_appearance_theme"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/settings_text_select_theme"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="false"/>

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/settings_round_back_white10_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settingsAppearanceThemeSystemIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_settings_system_gear"
                app:tint="@color/primary"
                android:contentDescription="@string/text_image_view"
                android:background="@color/white"
                android:padding="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/textAppearanceThemeSystem"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_text"
                android:text="@string/settings_text_appearance_system"
                android:textStyle="bold"
                android:layout_toEndOf="@id/settingsAppearanceThemeSystemIcon"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/settingsAppearanceThemeSystemSelect"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:tint="@color/primary"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/text_image_view"
                android:src="@drawable/ic_settings_check_mark"
                android:background="@color/white"
                android:padding="@dimen/_12sdp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/settingsAppearanceThemeLightIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:contentDescription="@string/text_image_view"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_settings_appearance"
                app:tint="@color/primary"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:layout_toEndOf="@id/settingsAppearanceThemeLightIcon"
                android:text="@string/settings_text_light"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/settingsAppearanceThemeLightSelect"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:tint="@color/primary"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/text_image_view"
                android:src="@drawable/ic_settings_check_mark"
                android:visibility="gone"
                android:background="@color/white"
                android:padding="@dimen/_12sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/settingsAppearanceThemeDarkIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/white"
                android:contentDescription="@string/text_image_view"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_settings_night_mode_moon"
                app:tint="@color/primary"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:layout_toEndOf="@id/settingsAppearanceThemeDarkIcon"
                android:text="@string/settings_text_dark"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/settingsAppearanceThemeDarkSelect"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:tint="@color/primary"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/text_image_view"
                android:src="@drawable/ic_settings_check_mark"
                android:background="@color/white"
                android:visibility="gone"
                android:padding="@dimen/_12sdp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>