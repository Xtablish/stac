<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.OCRActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/resultCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fff"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imagePreviewCard">

        <TextView
            android:text="@string/text_result"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/resultEt"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/resultLiveEt"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/surfaceViewCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fff"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/navigationCardView"
        app:layout_constraintTop_toBottomOf="@id/resultCardView"
        android:visibility="invisible">

        <SurfaceView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView"
            android:layout_alignParentTop="true"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imagePreviewCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fff"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/navigationCardView"
        app:layout_constraintTop_toBottomOf="@id/resultCardView">

        <TextView
            android:text="@string/image_preview_text"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageIVPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="250dp"
                    android:contentDescription="@string/cont_des_language_image" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/navigationCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#fff"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagePreviewCard">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/light_grey"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/liveFeed"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/navigation_gallery_icon"
               android:layout_marginStart="5dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/copyToChat"
               tools:ignore="ContentDescription"
               android:tag="gallery"/>

           <ImageView
               android:id="@+id/copyToChat"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/navigation_chat_icon"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="5dp"
               app:layout_constraintStart_toEndOf="@id/liveFeed"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@id/aiTranslate"
               tools:ignore="ContentDescription"
               android:tag="chat"/>

           <ImageView
               android:id="@+id/aiTranslate"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/navigation_camera_icon"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/copyToChat"
               app:layout_constraintEnd_toStartOf="@id/speakText"
               tools:ignore="ContentDescription"
               android:tag="camera"/>

           <ImageView
               android:id="@+id/speakText"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/navigation_ai_icon"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/aiTranslate"
               app:layout_constraintEnd_toStartOf="@id/imageBackBtn"
               tools:ignore="ContentDescription"
               android:tag="translate"/>

           <ImageView
               android:id="@+id/imageBackBtn"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/navigation_back_icon"
               android:layout_gravity="center_vertical"
               android:layout_marginStart="5dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@id/speakText"
               app:layout_constraintEnd_toEndOf="parent"
               tools:ignore="ContentDescription"
               android:tag="liveTranslate"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>