<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/input_background"
    tools:context=".activities.settings.SettingsPrivacy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp">

        <ImageView
            android:id="@+id/imageCancelBtn"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary"
            android:contentDescription="@string/text_image_view"
            android:padding="@dimen/_14sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_text_privacy"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:text="@string/settings_text_privacy_end_to_end_encryption"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/primary_text"
        tools:ignore="VisualLintBounds" />

    <LinearLayout
        android:background="@drawable/settings_round_back_white10_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:id="@+id/settingsPrivacyEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_privacy_security"
            android:gravity="center"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textReceivedMessage"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:text="@string/settings_text_privacy_receiver_can_see_it"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_received_message"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_constraintWidth_max="wrap"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_13ssp"/>

        <TextView
            android:id="@+id/textReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="6dp"
            android:text="@string/settings_text_appearance_2_10_pm"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_8ssp"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="@id/textMessage"
            app:layout_constraintTop_toBottomOf="@id/textMessage"/>

        <TextView
            android:id="@+id/textSentMessage"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:background="@drawable/background_send_message"
            android:layout_marginTop="6dp"
            android:text="@string/settings_text_privacy_sender_can_see_it"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_constraintWidth_max="wrap"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"/>

        <TextView
            android:id="@+id/textSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/settings_text_appearance_2_20_pm"
            android:layout_marginTop="2dp"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_8ssp"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="@id/textMessage"
            app:layout_constraintTop_toBottomOf="@id/textMessage"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/settings_round_back_white10_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        tools:ignore="VisualLintBounds">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent,VisualLintBounds">

            <ImageView
                android:id="@+id/settingsNotificationsPlaySoundIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_settings_privacy_encryption"
                android:contentDescription="@string/text_image_view"
                android:background="@color/white"
                android:padding="@dimen/_12sdp"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:layout_toEndOf="@id/settingsNotificationsPlaySoundIcon"
                android:text="@string/settings_text_privacy_end_to_end_encryption"
                tools:ignore="RelativeOverlap" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/settingsNotificationsPlaySoundEnable"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:switchMinWidth="@dimen/_30sdp"
                tools:ignore="DuplicateSpeakableTextCheck,VisualLintBounds" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="355dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/settings_text_privacy_end_to_end_description"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck,VisualLintBounds,TextContrastCheck" />


</LinearLayout>