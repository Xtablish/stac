<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_background"
    android:orientation="vertical"
    tools:context=".activities.settings.SettingsMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBackBtn"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary"
            android:contentDescription="@string/text_image_view"
            android:padding="@dimen/_14sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_settings"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14ssp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/settings_round_back_white10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/background_image"
                        android:contentDescription="@string/text_image_view"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"
                        app:tint="@color/white"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:id="@+id/userTextName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/profileImage"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/profileSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/settings_round_back_white10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/settingsAccountImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_settings_account"
                        app:tint="@color/primary"
                        android:contentDescription="@string/text_image_view"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsAccountImage"
                        android:text="@string/settings_text_account"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/AccountSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/settingsAppearanceImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/white"
                        android:contentDescription="@string/text_image_view"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/ic_settings_appearance"
                        app:tint="@color/primary"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsAppearanceImage"
                        android:text="@string/settings_text_appearance"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/AppearanceIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/settingsChatsImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@color/white"
                        android:contentDescription="@string/text_image_view"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/ic_settings_chats"
                        app:tint="@color/primary"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsChatsImage"
                        android:text="@string/settings_text_chats"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/ChatsSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/settings_round_back_white10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/settingsStoriesImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_settings_stories"
                        app:tint="@color/primary"
                        android:contentDescription="@string/text_image_view"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsStoriesImage"
                        android:text="@string/settings_text_stories"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/StoriesSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/settingsNotificationsImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_settings_notifications"
                        app:tint="@color/primary"
                        android:contentDescription="@string/text_image_view"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsNotificationsImage"
                        android:text="@string/notifications"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/NotificationsSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/settingsPrivacyImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_settings_privacy"
                        app:tint="@color/primary"
                        android:contentDescription="@string/text_image_view"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsPrivacyImage"
                        android:text="@string/settings_text_privacy"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/PrivacySettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/settings_round_back_white10_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/settingsAboutImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_settings_about"
                        app:tint="@color/primary"
                        android:contentDescription="@string/text_image_view"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/settingsAboutImage"
                        android:text="@string/settings_text_about"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/AboutAppSettingsIcon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:tint="@color/primary"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/text_image_view"
                        android:src="@drawable/ic_right_back"
                        android:background="@color/white"
                        android:padding="@dimen/_12sdp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>