<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:animateLayoutChanges="true"
    tools:context=".activities.personalInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"/>

        <ImageView
            android:id="@+id/imageBackBtn"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary"
            android:contentDescription="@string/text_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_14sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_information"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_12ssp"
            android:layout_centerVertical="true"
            app:layout_constraintStart_toEndOf="@id/imageBackBtn"
            app:layout_constraintTop_toTopOf="@id/imageBackBtn"
            app:layout_constraintBottom_toBottomOf="@id/imageBackBtn"/>

        <TextView
            android:id="@+id/textAppStac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stac"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@id/layoutImage"
            app:layout_constraintStart_toStartOf="@id/layoutImage"
            app:layout_constraintEnd_toEndOf="@id/layoutImage"/>

        <FrameLayout
            android:id="@+id/layoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/inputName">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageProfile"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/background_image"
                android:src="@drawable/stac_logo_small"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/textAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#616161"
                android:textSize="@dimen/_10ssp"
                android:visibility="invisible"/>

        </FrameLayout>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="0dp"
            android:maxWidth="@dimen/_488sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:hint="@string/name"
            android:background="@color/white"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_13ssp"
            android:autofillHints=""
            app:layout_constraintTop_toBottomOf="@id/layoutImage"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical2"
            app:layout_constraintBottom_toTopOf="@id/inputEmail"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="0dp"
            android:maxWidth="@dimen/_488sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/white"
            android:hint="@string/email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_13ssp"
            android:autofillHints=""
            app:layout_constraintTop_toBottomOf="@id/inputName"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical2"
            app:layout_constraintBottom_toTopOf="@id/inputPassword"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="0dp"
            android:maxWidth="@dimen/_488sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="@string/password"
            android:background="@color/white"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/primary_text"
            android:importantForAutofill="no"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/inputEmail"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical2"
            app:layout_constraintBottom_toTopOf="@id/inputConfirmPassword"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/inputConfirmPassword"
            android:layout_width="0dp"
            android:maxWidth="@dimen/_488sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="@string/confirm_password"
            android:background="@color/white"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/primary_text"
            android:importantForAutofill="no"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toBottomOf="@id/inputPassword"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical2"
            app:layout_constraintBottom_toTopOf="@id/btnUpdateFrame"
            tools:ignore="VisualLintTextFieldSize" />

        <FrameLayout
            android:id="@+id/btnUpdateFrame"
            android:layout_width="0dp"
            android:maxWidth="@dimen/_488sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@id/inputConfirmPassword"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:maxWidth="@dimen/_320sdp"
                app:cornerRadius="@dimen/_8sdp"
                app:backgroundTint="@color/icon_red"
                tools:ignore="VisualLintButtonSize" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary"
                android:visibility="invisible"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>